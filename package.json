{
  "name": "medium-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol Server for Medium API Integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test:inspector:dev": "npx @modelcontextprotocol/inspector npx ts-node src/index.ts",
    "test:inspector:config": "npx @modelcontextprotocol/inspector --config tests/inspector/mcp-config.json --server medium-mcp-server",
    "test:inspector:cli": "npx @modelcontextprotocol/inspector --cli node dist/index.js --method tools/list",
    "test:inspector:tools": "npx @modelcontextprotocol/inspector --cli node dist/index.js --method tools/list"
  },
  "keywords": [
    "medium",
    "api",
    "mcp",
    "model-context-protocol",
    "content-publishing"
  ],
  "author": "Dishant Kumar",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.10",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "typescript": "^5.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0"
  }
}
